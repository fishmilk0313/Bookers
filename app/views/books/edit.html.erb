<h2> Editing Book </h2>
 <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
    <h2><%= @book.errors.count %> error :</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <% end %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <p><%= f.submit 'Update Book' %></p>

 <%= link_to "Show", book_path(@book) %>

 <%= link_to "Back", books_path %>
 <% end %>
