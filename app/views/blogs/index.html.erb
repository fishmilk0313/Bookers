<h1> Books </h1>
<table>

	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
				<th colspan ="3"></th>
		</tr>
	</thead>
	<% @blogs.each do |blog| %>
	<tbody>
		<tr>
			<th><%= blog.title %></th>
			<th><%= blog.body %></th>
			<th><%= link_to "Show", blog_path(blog) %></th>
			<th><%= link_to "Edit", edit_blog_path(blog) %></th>
			<th><%= link_to "Destroy", blog_path(blog.id), method: :delete %></th>
			</tr>
	</tbody>
	<% end %>
</table>
<h2> New book </h2>
 <%= form_for(@blog) do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>

 <h4>Body</h4>
 <%= f.text_area :body %>

 <%= f.submit "Create book" %>

 <% end %>